public class Controleur {
    private Modele modele;
    private Vue vue;

    public Controleur(Modele modele, Vue vue) {
        this.modele = modele;
        this.vue = vue;
    }

    public void saisirNombres() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Entrez le dividende : ");
        int dividende = scanner.nextInt();
        System.out.print("Entrez le diviseur : ");
        int diviseur = scanner.nextInt();
        modele.setNombres(dividende, diviseur);
    }

    public void testerDivision() {
        try {
            int resultat = modele.diviser();
            vue.afficherResultat(resultat);
        } catch (DivisionParZero e) {
            vue.afficherErreur(e);
        } finally {
            vue.afficherNombres(modele.getDividende(), modele.getDiviseur());
        }
    }
}
